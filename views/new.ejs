<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form action="/blogs" method="post" class="ui form">
        <div class="field">
            <label for="">Title:</label>
            <input type="text" name="blog[title]" id="" placeholder="Title">
        </div>

        <div class="field">
            <label for="">Image:</label>
            <input type="text" name="blog[image]" id="" placeholder="Image URL">
        </div>

        <div class="field">
            <label for="">Blog Content:</label>
            <textarea name="blog[body]" id="" cols="30" rows="10" placeholder="Blog Post Here"></textarea>
        </div>

        <input class="ui violet big button" type="submit" value="Submit">

    </form>

</div>
